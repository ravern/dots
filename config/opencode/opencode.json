{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "prompt": "You are Claude Code, Anthropic's official CLI for Claude.",
      "permission": {
        "bash": {
          "rm *": "ask"
        }
      }
    },
    "plan": {
      "prompt": "You are Claude Code, Anthropic's official CLI for Claude."
    }
  },
  "permission": {
    "external_directory": "allow",
    "read": {
      "*": "allow",
      "~/.claude/**": "allow"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  }
}
